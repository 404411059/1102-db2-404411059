<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Crown Clothing</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="header">
    <a href="/" class="logo-container">
      <img src='/assets/crown.svg' />
    </a>
    <div class="options">
      <a href="/crown2_59" class="option">Home</a>
      <a href="/shop" class="option">Contact</a>
      <a href="/signin" class="option">Sign In</a>
      <div class="cart-icon" onclick="cartToggle()">
        <img class="shopping-icon" src="/assets/shopping-bag.svg" alt="">
      </div>
      <div class="cart-dropdown">
        <div class="cart-items">
          <div class="cart-item">
             <img src="https://i.ibb.co/QdJwgmp/brown-cowboy.png" alt="item">
             <div class="item-details">
               <span class="name">Brown Cowboy</span>
               <span class="price">4 * $35</span>
             </div>
          </div>
          <div class="cart-item">
            <img src="https://i.ibb.co/mJS6vz0/blue-jean-jacket.png" alt="item">
            <div class="item-details">
              <span class="name">Blue Jean Jacket</span>
              <span class="price">1 * $90</span>
          </div>
        </div>
        <button class="custom-button">GO TO CHECKOUT</button>
      </div>
    </div>
    </div>
  </div>
  
  <div class="shop-page">
    <div class="collection-overview">
      <div class="collection-preview">
        <h2 class="title">Hats</h2>
        <div class="preview">
          <% for(let i=0; i<hats_data.length; i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= hats_data[i].remote_url %>" />
              <div class="collection-footer">
                <span class="name"><%= hats_data[i].product_name %></span>
                <span class="price"><%= hats_data[i].price %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
          <% } %>
        </div>
      </div>
      <div class="collection-preview">
        <h1 class="title">Jackets</h1>  
        <div class="preview">
          <% for(let i=0; i<jackets_data.length; i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= jackets_data[i].remote_url %>" />
              <div class="collection-footer">
                <span class="name"><%= jackets_data[i].product_name %></span>
                <span class="price"><%= jackets_data[i].price %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
          <% } %>
        </div>
      </div>
      <div class="collection-preview">
        <h2 class="title">Sneakers</h2>  
        <div class="preview">
          <% for(let i=0; i<sneakers_data.length; i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= sneakers_data[i].remote_url %>" />
              <div class="collection-footer">
                <span class="name"><%= sneakers_data[i].product_name %></span>
                <span class="price"><%= sneakers_data[i].price %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
          <% } %>
        </div>
      </div>
      <div class="collection-preview">
        <h2 class="title">Womens</h2>  
        <div class="preview">
          <% for(let i=0; i<womens_data.length; i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= womens_data[i].remote_url %>" />
              <div class="collection-footer">
                <span class="name"><%= womens_data[i].product_name %></span>
                <span class="price"><%= womens_data[i].price %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
          <% } %>
        </div>
      </div>
      <div class="collection-preview">
        <h2 class="title">Mens</h2>  
        <div class="preview">
          <% for(let i=0; i<mens_data.length; i++) { %>
            <div class="collection-item">
              <img class="image" src="<%= mens_data[i].remote_url %>" />
              <div class="collection-footer">
                <span class="name"><%= mens_data[i].product_name %></span>
                <span class="price"><%= mens_data[i].price %></span>
              </div>
              <button class="custom-button">Add to Cart</button>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <script>
    function cartToggle(){
      p = document.querySelector('.cart-dropdown');
      p.classList.toggle("show");
    }
  </script>
</body>
</html>
